{
  "name": "FireTail client library demo",
  "description": "This is a standalone demonstration of the FireTail JavaScript client library integration with an OpenAPI 3.0 based Node/Express application.",
  "version": "1.0.0",
  "author": "Timo Ruppell <timo@firetail.io>",
  "license": "LGPL-3.0",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon"
  },
  "dependencies": {
    "@public.firetail.io/firetail-api": "file:../../../firetail-js-lib",
    "body-parser": "1.20.1",
    "express": "4.18.2",
    "express-openapi": "12.1.0",
    "lodash": "^4.17.21",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.13.0",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "../../../firetail-js-lib/dist"
    ],
    "delay": "100",
    "ext": "ts,js",
    "exec": "ts-node src/index.ts"
  }
}
